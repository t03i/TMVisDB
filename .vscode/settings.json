{
    "files.exclude": {
        "frontend/": true,
        "backend/": true,
        ".ruff_cache/": true,
        "build/": true
    },
    "editor.defaultFormatter": "esbenp.prettier-vscode",
    "markdownlint.config": {
        "MD041": false, // Allow center alignment
        "MD033": {
            "allowed_elements": [
                "div",
                "kbd",
                "br",
                "details",
                "summary",
                "img",
                "sup"
            ]
        }
    }
}
